{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false
  },
  "ts-node": {
    "esm": true
  }
}